;; The first three lines of this file were inserted by DrRacket. They record metadata
;; about the language level of this file in a form that our tools can easily process.
#reader(lib "htdp-beginner-reader.ss" "lang")((modname images) (read-case-sensitive #t) (teachpacks ()) (htdp-settings #(#t constructor repeating-decimal #f #t none #f () #f)))
(require 2htdp/image)

;(circle 10 "solid" "red")
;(rectangle 30 60 "outline" "blue")
;(text "hello" 24 "orange")

(overlay (circle 10 "solid" "red")
       (circle 20 "solid" "yellow")
       (circle 30 "solid" "green"))

Define shapes for the brain
(define background (empty-scene 400 400 "white"))
(define brain-base (ellipse 200 150 "solid" "pink"))
(define brain-division (ellipse 190 140 "solid" "lightpink"))
(define combined-brain (overlay/align "center" "middle" brain-division brain-base))

;; Add lobes
(define frontal-lobe (circle 40 "solid" "peachpuff"))
(define temporal-lobe (ellipse 40 20 "solid" "plum"))
(define occipital-lobe (circle 25 "solid" "lightblue"))

(define brain-with-lobes
  (overlay/xy occipital-lobe 50 20
    (overlay/xy temporal-lobe -40 80
      (overlay/xy frontal-lobe -50 -50
        combined-brain))))

;; Add brain stem and cerebellum
(define cerebellum (circle 30 "solid" "lightgreen"))
(define brain-stem (rectangle 15 50 "solid" "gray"))

(define final-brain
  (overlay/align "center" "bottom"
    (overlay/align "center" "bottom" brain-stem cerebellum)
    brain-with-lobes))

;; Place the finished image on the background
(place-image final-brain 200 200 background)